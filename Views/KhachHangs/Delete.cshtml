@model DoAnWeb.Models.KhachHang

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<style>
    .left {
        text-align: end;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                </div>
                <div class="card-body">
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3 left">
                            Họ tên
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.HoTen)
                        </dd>

                        <dt class="col-sm-3 left">
                            Địa chỉ
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.DiaChi)
                        </dd>

                        <dt class="col-sm-3 left">
                            SĐT
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.SDT)
                        </dd>

                        <dt class="col-sm-3 left">
                            Giới Tính
                        </dt>
                        <dd class="col-sm-9 ">
                            @if (Model.GioiTinh == true)
                            {
                                <span>Nam</span>
                            }
                            else
                            {
                                <span>Nữ</span>
                            }
                        </dd>
                        <dt class="col-sm-3 left">Ngày Sinh</dt>
                        <dd class="col-sm-9 ">
                            @Html.DisplayFor(model => model.NgaySinh)
                        </dd>
                        <dt class="col-sm-3 left">
                            Email
                        </dt>
                        <dd class="col-sm-9 ">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @Html.ActionLink("<- Trang chủ", "Default", "SanPhams")
    </div>
}
</div>
